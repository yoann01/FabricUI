/****************************************************************************
 * HotkeyEditorDialog
 ***************************************************************************/

#HotkeyEditorDialog 
{
  margin: 0;
  padding: 0;
}

#HotkeyEditorDialog QToolBar {
  border: 0;
}

#HotkeyEditorDialog QToolBar::separator
{
  border: 1px solid #666;
  border-style: none;
  width: 1px;
  background-color: #666;
}

#HotkeyEditorDialog QLabel
{
  margin: 0 4px 0 0;
  padding: 0;
  color: #FFFFFF;
}

#HotkeyEditorDialog QToolButton
{
  color: #FFFFFF;
  border: 0;
  border-radius: 3px;
  padding: 4px;
  margin: 4px;
  background-color: #2F2F2F;
}

#HotkeyEditorDialog QToolButton::disabled
{
  background-color: #444;
  color: #6D6D6D;
}

#HotkeyEditorDialog QToolButton::checked
{
  background-color: #176580;
}

#HotkeyEditorDialog QToolButton::checked:hover
{
  background-color: #1C7A99;
}

#HotkeyEditorDialog QToolButton:hover
{
  background-color: #50626E;
}

#HotkeyEditorDialog QToolButton::pressed
{
  border-style: inset;
  margin-top: 6px;
  margin-left: 6px;

  background-color: #50626E;
}

#HotkeyEditorDialog QTableWidget
{
  border: 0;
  border-radius: 3px;
  background: #333333;
  color: white;
  font: 10pt "Roboto";
  font-weight: normal;  
}

#HotkeyEditorDialog QTableWidget::item
{
  padding: 2px;
}

#HotkeyEditorDialog QTableWidget::item:hover
{
  padding: 0;
  background-color: #596D7A;
}

#HotkeyEditorDialog QTableWidget QHeaderView::section
{
  background-color: #242424;
  color: white;
  padding: 4px;
  border: none;
  border-right: 1px solid #333333;
}

#HotkeyEditorDialog QTableWidget QHeaderView::section:hover
{
  background-color: #383838;
}

