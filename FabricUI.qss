/* =================== */
/* Scroll Bar Vertical */
/* =================== */
QScrollBar:vertical
{
  border: 1px solid #2C2C2C;
  background: #262626;
  width: 20px;
  margin: 20px 0 20px 0;
}

QScrollBar::handle:vertical
{
  background: #3F3F3F;
  border-top: 1px solid #555555;
  border-bottom: 1px solid #333;
  min-height: 20px;
}

QScrollBar::handle:vertical:hover
{
  background: #4D4D4D;
  min-height: 20px;
}

QScrollBar::handle:vertical::pressed
{
  background: #50626E;
  border-top: 1px solid #596D7A;
  min-height: 20px;
}

QScrollBar::add-line:vertical
{
  background: #3F3F3F;
  border: 1px solid #2C2C2C;

  height: 20px;
  subcontrol-position: bottom;
  subcontrol-origin: margin;
}

QScrollBar::add-line:vertical:hover
{
  background: #3C3C3C;

  height: 20px;
  subcontrol-position: bottom;
  subcontrol-origin: margin;
}

QScrollBar::add-line:vertical::pressed
{
  background-color: #50626E;

  height: 20px;
  padding-bottom: -1px;
  padding-right: -1px;
  subcontrol-position: bottom;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
  background: #3F3F3F;
  border: 1px solid #2C2C2C;

  height: 20px;
  subcontrol-position: top;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical:hover
{
  background: #3C3C3C;

  border-bottom: 1px solid #222;
  height: 20px;
  subcontrol-position: top;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical::pressed
{
  background-color: #50626E;

  border-bottom: 1px solid #222;
  height: 20px;
  padding-top: 1px;
  padding-left: 1px;
  subcontrol-position: top;
  subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical 
{
  border-image: none;
  image: url(${FABRIC_DIR}/Resources/Icons/scroll-up-arrow.png);
}

QScrollBar::down-arrow:vertical
{
  border-image: none;
  image: url(${FABRIC_DIR}/Resources/Icons/scroll-down-arrow.png);
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
  background: none;
}

QScrollBar::add-page:vertical::pressed, QScrollBar::sub-page:vertical::pressed
{
  background-color: #50626E;
}


